<Project Sdk="Microsoft.NET.Sdk.Web">

	<!-- Project Properties -->
	<PropertyGroup Label="ProjectProperties">
		<ProjectType>ApplicationHost</ProjectType>
		<ProjectLayer>Backend</ProjectLayer>
		<ApplicationType>API</ApplicationType>
	</PropertyGroup>

	<!-- Project References -->
	<ItemGroup Label="ProjectReferences">
		<ProjectReference Include="$(ApiProjectFile)" />
		<ProjectReference Include="$(AspireProjectFile)" />
		<ProjectReference Include="$(WebHostProjectFile)" />
	</ItemGroup>

	<!-- Package References -->
	<ItemGroup Label="PackageReferences" Condition="$(Configuration)=='Migrations'">
		<PackageReference Include="Microsoft.EntityFrameworkCore.Design">
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
			<PrivateAssets>all</PrivateAssets>
		</PackageReference>
		<PackageReference Include="Microsoft.EntityFrameworkCore.Tools">
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
			<PrivateAssets>all</PrivateAssets>
		</PackageReference>
	</ItemGroup>

</Project>
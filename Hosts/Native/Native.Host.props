<Project>

	<!-- Imports -->
	<Import Project="..\..\Global.props" />

	<!-- Project -->
	<PropertyGroup>
		<TargetFramework />
		<!-- <ErrorOnDuplicatePublishAssets>false</ErrorOnDuplicatePublishAssets> -->
		<!-- <RunAOTCompilation>true</RunAOTCompilation> -->
		<IsAotCompatible>true</IsAotCompatible>
		<IsTrimmable>true</IsTrimmable>
		<IsPackable>false</IsPackable>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)'=='Debug'">
		<RunAOTCompilation>false</RunAOTCompilation>
		<AndroidEnableProfiledAot>false</AndroidEnableProfiledAot>
		<!-- <UseInterpreter>true</UseInterpreter> -->
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)'=='Release'">
		<RunAOTCompilation>true</RunAOTCompilation>
		<AndroidEnableProfiledAot>true</AndroidEnableProfiledAot>
		<!-- <UseInterpreter>false</UseInterpreter> -->
	</PropertyGroup>

	<!-- Framework -->
	<PropertyGroup>
		<TargetFrameworks>net9.0-maccatalyst;net9.0-android;net9.0-ios</TargetFrameworks>
		<TargetFrameworks Condition="$([MSBuild]::IsOSPlatform('windows'))">$(TargetFrameworks);net9.0-windows10.0.19041.0</TargetFrameworks>
		<TargetPlatformMinVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'windows'">10.0.17763.0</TargetPlatformMinVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'windows'">10.0.17763.0</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'maccatalyst'">15.0</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'android'">24.0</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'ios'">15.0</SupportedOSPlatformVersion>
		<SingleProject>true</SingleProject>
		<UseMaui>true</UseMaui>
	</PropertyGroup>

	<!-- Settings -->
	<ItemGroup>
		<EmbeddedResource Include="$(SolutionFolder)\Settings\GlobalSettings.json" LogicalName="Settings.Global.json" Link="Settings\Global.json" />
		<EmbeddedResource Include="$(SolutionFolder)\Settings\NativeSettings.Default.json" LogicalName="Settings.Default.json" Link="Settings\Default.json" />
		<EmbeddedResource Include="$(SolutionFolder)\Settings\NativeSettings.Development.json" LogicalName="Settings.Development.json" Link="Settings\Development.json" />
		<EmbeddedResource Include="$(SolutionFolder)\Settings\NativeSettings.Production.json" LogicalName="Settings.Production.json" Link="Settings\Production.json" />
		<EmbeddedResource Include="$(SolutionFolder)\Resources\Localization\*.resx" LogicalName="%(Filename).resources" Link="Resources\Localization\%(Filename).resx" GenerateSource="false" />
	</ItemGroup>

	<!-- Maui Info -->
	<PropertyGroup>
		<ApplicationId>com.olympus.app</ApplicationId>
		<ApplicationTitle>Olympus</ApplicationTitle>
		<ApplicationVersion>1</ApplicationVersion>
		<ApplicationDisplayVersion>1.0.0</ApplicationDisplayVersion>
		<WindowsPackageType>None</WindowsPackageType>
		<OutputType>Exe</OutputType>
	</PropertyGroup>

	<!-- Assets -->
	<ItemGroup>
		<MauiFont Include="Resources\Fonts\*" />
		<MauiIcon Include="Resources\AppIcon\any.svg" />
		<MauiImage Include="Resources\Images\*" />
		<MauiImage Update="Resources\Images\dotnet_bot.svg" BaseSize="168,208" />
		<MauiSplashScreen Include="Resources\Splash\splash.svg" BaseSize="128,128" Color="#ffffff" />
		<MauiAsset Include="Resources\Raw\**" LogicalName="%(RecursiveDir)%(Filename)%(Extension)" />
	</ItemGroup>
	<ItemGroup Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'android'">
		<MauiIcon Include="Resources\AppIcon\android.svg" Color="#ffffff" />
	</ItemGroup>

	<!-- Packages -->
	<ItemGroup>
		<PackageReference Include="Microsoft.Maui.Controls" Version="9.0.90" />
		<PackageReference Include="Microsoft.AspNetCore.Components.WebView.Maui" Version="9.0.90" />
	</ItemGroup>

	<!-- Dependencies -->
	<ItemGroup>
		<ProjectReference Include="$(SolutionFolder)\Apps\Native\Native.csproj" />
		<ProjectReference Include="$(SolutionFolder)\Modules\Core\Frontend\Core.Frontend.csproj" />
		<!-- <ProjectReference Include="$(SolutionFolder)\Modules\Zeus\Frontend\Zeus.Frontend.csproj" /> -->
	</ItemGroup>

	<!-- Usings -->
	<ItemGroup>
		<Using Include="Humanizer" />
		<Using Include="Olympus.Shared" />
		<Using Include="Olympus.Kernel" />
		<Using Include="Olympus.Core.Archend" />
		<Using Include="Olympus.Core.Frontend" />
		<Using Include="Olympus.Native" />
		<Using Include="Olympus.Native.Host" />
		<Using Include="Microsoft.Extensions.DependencyInjection" />
	</ItemGroup>

</Project>
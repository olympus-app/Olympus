<Project>

	<!-- Imports -->
	<Import Project="..\..\Global.props" />

	<!-- Project -->
	<PropertyGroup>
		<IsPackable>false</IsPackable>
	</PropertyGroup>

	<!-- Settings -->
	<ItemGroup>
		<EmbeddedResource Include="$(SolutionFolder)\Settings\GlobalSettings.json" LogicalName="Settings.Global.json" Link="Settings\Global.json" />
		<EmbeddedResource Include="$(SolutionFolder)\Settings\ApiSettings.Default.json" LogicalName="Settings.Default.json" Link="Settings\Default.json" />
		<EmbeddedResource Include="$(SolutionFolder)\Settings\ApiSettings.Development.json" LogicalName="Settings.Development.json" Link="Settings\Development.json" />
		<EmbeddedResource Include="$(SolutionFolder)\Settings\ApiSettings.Production.json" LogicalName="Settings.Production.json" Link="Settings\Production.json" />
		<EmbeddedResource Include="$(SolutionFolder)\Resources\Localization\*.resx" LogicalName="%(Filename).resources" Link="Resources\Localization\%(Filename).resx" GenerateSource="false" />
	</ItemGroup>

	<!-- Packages -->
	<ItemGroup>
		<PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="9.0.8">
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
			<PrivateAssets>all</PrivateAssets>
		</PackageReference>
	</ItemGroup>

	<!-- Dependencies -->
	<ItemGroup>
		<ProjectReference Include="$(SolutionFolder)\Apps\Api\Api.csproj" />
		<ProjectReference Include="$(SolutionFolder)\Hosts\Web\Web.Host.csproj" />
		<ProjectReference Include="$(SolutionFolder)\Modules\Core\Backend\Core.Backend.csproj" />
		<ProjectReference Include="$(SolutionFolder)\Modules\Zeus\Backend\Zeus.Backend.csproj" />
	</ItemGroup>

	<!-- Usings -->
	<ItemGroup>
		<Using Include="Humanizer" />
		<Using Include="Olympus.Shared" />
		<Using Include="Olympus.Kernel" />
		<Using Include="Olympus.Core.Archend" />
		<Using Include="Olympus.Core.Backend" />
		<Using Include="Olympus.Api" />
		<Using Include="Olympus.Api.Host" />
		<Using Include="Microsoft.Extensions.DependencyInjection" />
	</ItemGroup>

</Project>
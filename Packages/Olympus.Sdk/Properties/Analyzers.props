<Project>

	<!-- Analyzers Properties -->
	<PropertyGroup Label="AnalyzersProperties">
		<EnableNETAnalyzers>true</EnableNETAnalyzers>
		<AnalysisLevel>latest-recommended</AnalysisLevel>
		<RunAnalyzers>true</RunAnalyzers>
		<RunAnalyzersDuringBuild>false</RunAnalyzersDuringBuild>
		<RunAnalyzersDuringLiveAnalysis>true</RunAnalyzersDuringLiveAnalysis>
	</PropertyGroup>

	<!-- Analyzers References -->
	<ItemGroup Label="AnalyzersReferences" Condition="$(IsAnalyzer)=='false'">
		<PackageReference Include="Olympus.Analyzers" PrivateAssets="all" />
	</ItemGroup>

</Project>
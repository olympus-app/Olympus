<Project>

	<!-- Global Editor Configuration -->
	<ItemGroup Label="GlobalEditorConfiguration">
		<EditorConfigFiles Include="$(MSBuildThisFileDirectory)..\configuration\Olympus.globalconfig" />
	</ItemGroup>

	<!-- Debug Configuration -->
	<PropertyGroup Label="Configuration" Condition="$(Configuration)=='Debug' Or $(Configuration)==''">
		<BlazorWebAssemblyOmitDebugProxyOutput>false</BlazorWebAssemblyOmitDebugProxyOutput>
		<WasmApplicationEnvironmentName>Development</WasmApplicationEnvironmentName>
	</PropertyGroup>

	<!-- Release Configuration -->
	<PropertyGroup Label="Configuration" Condition="$(Configuration)=='Release'">
		<BlazorWebAssemblyOmitDebugProxyOutput>true</BlazorWebAssemblyOmitDebugProxyOutput>
		<WasmApplicationEnvironmentName>Production</WasmApplicationEnvironmentName>
	</PropertyGroup>

</Project>
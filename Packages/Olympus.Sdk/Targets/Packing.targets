<Project>

	<!-- Packing Properties for Packable Projects -->
	<PropertyGroup Label="PackingProperties" Condition="$(UsePacking)=='' Or $(UsePacking)=='true' Or $(IsPackableProject)=='true'">
		<IsPackable>true</IsPackable>
	</PropertyGroup>

	<!-- Packing Properties for Not Packable Projects -->
	<PropertyGroup Label="PackingProperties" Condition="$(UsePacking)=='false' Or $(IsPackableProject)=='false' Or $(IsApplicationHost)=='true'">
		<IsPackable>false</IsPackable>
	</PropertyGroup>

	<!-- NuGet Packing Properties -->
	<ItemGroup Label="PackingProperties" Condition="$(UsePacking)=='' Or $(UsePacking)=='true' Or $(IsPackableProject)=='true'">
		<None Include="$(ProjectProps)" PackagePath="build\;buildTransitive\;buildMultiTargeting\" Pack="true" Condition="Exists($(ProjectProps))" />
		<None Include="$(ProjectTargets)" PackagePath="build\;buildTransitive\;buildMultiTargeting\" Pack="true" Condition="Exists($(ProjectTargets))" />
	</ItemGroup>

</Project>
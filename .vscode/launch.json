{
	"configurations": [
		{
			"name": "API Host",
			"type": "dotnet",
			"request": "launch",
			"projectPath": "${workspaceFolder}\\Apps\\Olympus.Api.Host\\Olympus.Api.Host.csproj",
			"launchConfigurationId": "TargetFramework=;API",
			"internalConsoleOptions": "openOnSessionStart",
			"serverReadyAction": {
				"action": "debugWithChrome",
				"uriFormat": "https://localhost:3333",
				"pattern": "\\bNow listening on:\\s+https?://\\S+",
				"killOnServerStop": true
			}
		},
		{
			"name": "Web Host",
			"type": "dotnet",
			"request": "launch",
			"projectPath": "${workspaceFolder}\\Apps\\Olympus.Web.Host\\Olympus.Web.Host.csproj",
			"launchConfigurationId": "TargetFramework=;Web",
			"internalConsoleOptions": "openOnSessionStart",
			"serverReadyAction": {
				"action": "debugWithChrome",
				"uriFormat": "https://localhost:3333",
				"pattern": "\\bNow listening on:\\s+https?://\\S+",
				"killOnServerStop": true
			}
		}
	]
}
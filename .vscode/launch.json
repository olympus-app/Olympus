{
	"configurations": [
		{
			"name": "Server Debug",
			"type": "dotnet",
			"request": "launch",
			"projectPath": "${workspaceFolder}/Server/Server.csproj",
			"launchConfigurationId": "TargetFramework=;Launch Server",
			"internalConsoleOptions": "openOnSessionStart",
			"serverReadyAction": {
				"action": "debugWithChrome",
				"uriFormat": "https://localhost:3333",
				"pattern": "\\bNow listening on:\\s+https?://\\S+",
				"webRoot": "${workspaceFolder}/Client/wwwroot",
				"killOnServerStop": true
			}
		}
	]
}